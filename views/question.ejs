<%- include("components/header", { title: question.title }) %>
<div class="container">
  <h1 class="text-5xl font-bold mb-2"><%= question.title %></h1>
  <p class="question-summary">
    طرح منذ <%= formatDistanceToNow(question.createdAt, { locale: arMA }) %> من
    طرف
    <a
      href="/users/<%= question.author._id %>"
      class="text-primary hover:underline"
      ><%= question.author.firstName %></a
    >
  </p>
  <hr class="mt-3 mb-3 bg-gray" />
  <div class="question-body">
    <%- question.body %>
  </div>
</div>
<%- include("components/footer") %>
